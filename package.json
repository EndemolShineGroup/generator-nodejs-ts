{
  "name": "@endemolshinegroup/generator-nodejs-ts",
  "description": "A node-js project generator using Typescript",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Endemol Shine Group Technology",
    "url": "https://github.com/EndemolShineGroup"
  },
  "homepage": "https://github.com/EndemolShineGroup/generator-nodejs-ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/EndemolShineGroup/generator-nodejs-ts.git"
  },
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.3.0"
  },
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf generators/",
    "build": "tsc",
    "postbuild": "mkdir -p generators/app/templates && cp -R src/app/templates generators/app",
    "build:docs": "rimraf docs/api && typedoc --out docs/api --target es6 --theme minimal --mode file src",
    "build:watch": "tsc --watch",
    "lint": "tslint -p tsconfig.json -t codeFrame 'src/**/*.ts' -e 'src/**/*.spec.ts'",
    "pretest": "rimraf coverage/",
    "test": "jest --no-cache --verbose",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "debug": "^4.0.1",
    "lodash.clonedeep": "^4",
    "lodash.foreach": "^4",
    "lodash.isempty": "^4",
    "lodash.isequal": "^4",
    "lodash.omit": "^4",
    "make-error": "^1",
    "yeoman-generator": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7",
    "@commitlint/config-conventional": "^7",
    "@commitlint/prompt": "^7",
    "@semantic-release/changelog": "^3",
    "@semantic-release/git": "^7",
    "@types/debug": "^0.0.30",
    "@types/jest": "^23",
    "@types/lodash.clonedeep": "^4",
    "@types/lodash.foreach": "^4",
    "@types/lodash.isempty": "^4",
    "@types/lodash.isequal": "^4",
    "@types/lodash.omit": "^4",
    "@types/node": "^10",
    "@types/rimraf": "^2.0.2",
    "@types/yeoman-generator": "^2.0.3",
    "@types/yeoman-test": "^1.7.4",
    "commitizen": "^2",
    "husky": "^1",
    "jest": "^23",
    "lint-staged": "^7",
    "prettier": "^1",
    "rimraf": "^2",
    "semantic-release": "^15",
    "ts-jest": "^23.10.0-beta.1",
    "tslint": "^5",
    "tslint-config-esg": "github:EndemolShineGroup/tslint-config-esg",
    "tslint-config-prettier": "^1",
    "typedoc": "^0.12.0",
    "typescript": "^3",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
